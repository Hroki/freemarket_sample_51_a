= render partial: 'shared/header_before_login'
%body.mypage
  = render partial: 'breadcrumb'
  %main.mypage-content.flex
    .side
      = render partial: 'sidebar'     
    .signup-login__box.delivery-form
      .mypage-head
        %h2.bold.text-center クレジットカード情報入力
      %form{action: "/", method: "post", class: "form-format"} 
        .form-format__content
          = render partial: 'signup/credit'     
          %input{type: "submit", value: "次へ進む", class: "btn"}
= render partial: 'shared/app-banner'
= render partial: 'shared/footer'
.mercari-sell-btn
  .mercari-sell-btn__text 出品
  = link_to "https://www.mercari.com/jp/sell/" do
    = fa_icon 'camera', class: "camera"          